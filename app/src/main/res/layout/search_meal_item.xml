<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_meal">

    <ImageView
        android:id="@+id/img_search_meal"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp"
        android:src="@color/accent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/linearSearchFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/img_search_meal"
        app:layout_constraintTop_toTopOf="@+id/img_search_meal"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/tvSearchFragArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India"
            android:textColor="@color/g_black"
            android:fontFamily="@font/myfont"
            android:drawableStart="@drawable/ic_location"
            android:drawableTint="@color/g_black"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvSearchFragCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paneer"
            android:textColor="@color/g_black"
            android:fontFamily="@font/myfont"
            android:drawableStart="@drawable/ic_category"
            android:drawableTint="@color/g_black"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/searchFragMealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Name"
        app:layout_constraintStart_toStartOf="@id/linearSearchFragment"
        app:layout_constraintTop_toBottomOf="@+id/linearSearchFragment"
        android:layout_marginTop="10dp"
        android:textColor="@color/g_black"
        android:fontFamily="@font/myfont"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read More..."
        app:layout_constraintStart_toStartOf="@id/searchFragMealName"
        app:layout_constraintTop_toBottomOf="@+id/searchFragMealName"
        android:layout_marginTop="10dp"
        android:textColor="@color/g_black"
        android:fontFamily="@font/myfont"
        android:textStyle="bold" />


</androidx.constraintlayout.widget.ConstraintLayout>